<UserControl x:Class="Dokan.BootstrapperUX.Pages.Progress"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dokan.BootstrapperUX.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel Name="m_stackProgress" Orientation="Vertical" VerticalAlignment="Top" Margin="20,0">
            <Grid Margin="0,0,0,5" Height="50">
                <TextBlock Name="m_txtProgress" TextWrapping="WrapWithOverflow" TextTrimming="WordEllipsis" VerticalAlignment="Bottom">Collecting information...</TextBlock>
            </Grid>
            
            <local:MetroProgressBar x:Name="m_progressBarPackage" Height="10" Minimum="0" Maximum="1" Value="0"/>

            <TextBlock Margin="0,25,0,5">Overall progress...</TextBlock>
            
            <local:MetroProgressBar x:Name="m_progressBarOverall" Height="10" Minimum="0" Maximum="1" Value="0"/>
        </StackPanel>
    </Grid>
</UserControl>
